datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id       String  @id @default(uuid())
  name     String
  email    String  @unique
  password String
}

model Customer {
  id       String     @id @default(uuid())
  name     String
  email    String     @unique
  imageUrl String     @map("image_url")
  invoices Invoice[]  // Add this line to define the back relation
}

model Invoice {
  id         String   @id @default(uuid())
  customerId String
  amount     Int
  status     String
  date       DateTime

  customer   Customer @relation(fields: [customerId], references: [id])
}

model Revenue {
  month   String @id
  revenue Int
}